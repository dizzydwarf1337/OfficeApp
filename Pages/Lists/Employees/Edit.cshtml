@page
@model SmartItApp.Pages.Lists.Employees.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.Id" />
            <div class="form-group mb-3">
                <label asp-for="Employee.FullName" class="control-label"></label>
                <input asp-for="Employee.FullName" class="form-control" />
                <span asp-validation-for="Employee.FullName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <select asp-for="Employee.Subdivision" class="form-select">
                    <option disabled selected>Choose Subdivision</option>
                    @foreach (var option in Enum.GetValues(typeof(SmartItApp.Enums.Subdivisions)))
                    {
                        <option>@option</option>
                    })
                </select>
                <span asp-validation-for="Employee.Subdivision" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <select asp-for="Employee.Position" class="form-select">
                    <option disabled selected>Choose Position</option>
                    @foreach (var option in Enum.GetValues(typeof(SmartItApp.Enums.Positions)))
                    {
                        <option>@option</option>
                    })
                </select>
                <span asp-validation-for="Employee.Position" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <select asp-for="Employee.Status" class="form-select ">
                    <option disabled selected>Choose Status</option>
                    @foreach (var option in Enum.GetValues(typeof(SmartItApp.Enums.Statuses)))
                    {
                        <option>@option</option>
                    })
                </select>
                <span asp-validation-for="Employee.Status" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <select asp-for="Employee.PeoplePartner" class="form-select">
                    <option disabled selected>Choose HR's ID'</option>
                    @foreach (var option in Model.HRs)
                    {
                        <option>@option.Id</option>
                    })
                </select>
                <span asp-validation-for="Employee.PeoplePartner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.DaysOff" class="control-label"></label>
                <input asp-for="Employee.DaysOff" class="form-control" />
                <span asp-validation-for="Employee.DaysOff" class="text-danger"></span>
            </div>
            <div class="form-group form-inline mb-3">
                <label asp-for="ImageFile" class="control-label">Photo</label>
                <input type="file" asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
